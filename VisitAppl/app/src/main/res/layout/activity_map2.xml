<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Map2">

    <LinearLayout
        android:id="@+id/linear_layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:gravity="center">

            <TextView
                android:id="@+id/text_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:text="MAP"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="38dp"
                app:srcCompat="@drawable/back_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_variants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:id="@+id/linear_layout_variants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_layout_search_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                    <ScrollView
                        android:id="@+id/scrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linear_layout_trips"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                                <RelativeLayout
                                    android:id="@+id/relative_layout_11"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_margin="10dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/rounded_angles"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView_top_11"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_margin="10dp"
                                        android:text="Bus 86"
                                        android:textColor="@android:color/black"
                                        android:textSize="12dp" />

                                    <TextView
                                        android:id="@+id/textView_bottom_11"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignStart="@+id/textView_top_11"
                                        android:layout_marginTop="25dp"
                                        android:text=" 53min   |   Without transfer   |   Fare: 150KZT"
                                        android:textColor="@android:color/darker_gray"
                                        android:textSize="8dp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/relative_layout_12"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_margin="10dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/rounded_angles"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView_top_12"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_margin="10dp"
                                        android:text="Bus 45"
                                        android:textColor="@android:color/black"
                                        android:textSize="12dp" />

                                    <TextView
                                        android:id="@+id/textView_bottom_12"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignStart="@+id/textView_top_12"
                                        android:layout_marginTop="25dp"
                                        android:text=" 56min   |   Without transfer   |   Fare: 150KZT"
                                        android:textColor="@android:color/darker_gray"
                                        android:textSize="8dp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/relative_layout_13"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_margin="10dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/rounded_angles"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView_top_13"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_margin="10dp"
                                        android:text="Bus 1 | Metro"
                                        android:textColor="@android:color/black"
                                        android:textSize="12dp" />

                                    <TextView
                                        android:id="@+id/textView_bottom_13"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignStart="@+id/textView_top_13"
                                        android:layout_marginTop="25dp"
                                        android:text=" 1hour 1min   |   1 transfer   |   Fare: 230KZT"
                                        android:textColor="@android:color/darker_gray"
                                        android:textSize="8dp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/relative_layout_14"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_margin="10dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/rounded_angles"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView_top_14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_margin="10dp"
                                        android:text="Yandex taxi"
                                        android:textColor="@android:color/black"
                                        android:textSize="12dp" />

                                    <TextView
                                        android:id="@+id/textView_bottom_14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignStart="@+id/textView_top_14"
                                        android:layout_marginTop="25dp"
                                        android:text=" 37min   |   Without transfer   |   Fare: 700KZT"
                                        android:textColor="@android:color/darker_gray"
                                        android:textSize="8dp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/relative_layout_15"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_margin="10dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/rounded_angles"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView_top_15"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_margin="10dp"
                                        android:text="Uber taxi"
                                        android:textColor="@android:color/black"
                                        android:textSize="12dp" />

                                    <TextView
                                        android:id="@+id/textView_bottom_15"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignStart="@+id/textView_top_15"
                                        android:layout_marginTop="25dp"
                                        android:text=" 39min   |   Without transfer   |   Fare: 800KZT"
                                        android:textColor="@android:color/darker_gray"
                                        android:textSize="8dp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/relative_layout_16"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_margin="10dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/rounded_angles"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView_top_16"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_margin="10dp"
                                        android:text="Walk"
                                        android:textColor="@android:color/black"
                                        android:textSize="12dp" />

                                    <TextView
                                        android:id="@+id/textView_bottom_16"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignStart="@+id/textView_top_16"
                                        android:layout_marginTop="25dp"
                                        android:text=" 1hour 53min   |   Fare: 0KZT"
                                        android:textColor="@android:color/darker_gray"
                                        android:textSize="8dp" />

                                </RelativeLayout>

                        </LinearLayout>

                    </ScrollView>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>