<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Fragments.PlacesPageFragments.PlacesPageFragment1">

    <LinearLayout
        android:id="@+id/linear_layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Header-->
    <RelativeLayout
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/gradient2">

        <TextView
            android:id="@+id/headerTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Places"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/fut_med"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="24.5dp"
            app:srcCompat="@drawable/basket_icon" />

        <EditText
            android:id="@+id/editText_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            android:text="Search"
            android:fontFamily="@font/fut_med"
            android:background="@drawable/search_rounded_angles"/>


    </RelativeLayout>

        <!--End Header-->

        <!--Body-->
        <RelativeLayout
            android:id="@+id/relative_layout_places"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ScrollView
                    android:id="@+id/scrollViewPlaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_news"
                        android:layout_width="55dp"
                        android:layout_height="25dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/rounded_angles"
                        android:text="News"
                        android:textAlignment="center"
                        android:textColor="@color/GP_GC_1"
                        android:fontFamily="@font/fut_med"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/button_events"
                        android:layout_width="55dp"
                        android:layout_height="25dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/rounded_angles"
                        android:text="Events"
                        android:textAlignment="center"
                        android:textColor="@color/GP_GC_1"
                        android:fontFamily="@font/fut_med"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/button_clubs"
                        android:layout_width="55dp"
                        android:layout_height="25dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/rounded_angles"
                        android:text="Clubs"
                        android:textAlignment="center"
                        android:textColor="@color/GP_GC_1"
                        android:fontFamily="@font/fut_med"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/button_zoo"
                        android:layout_width="55dp"
                        android:layout_height="25dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/rounded_angles"
                        android:text="Zoo"
                        android:textAlignment="center"
                        android:textColor="@color/GP_GC_1"
                        android:fontFamily="@font/fut_med"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/button_eat"
                        android:layout_width="55dp"
                        android:layout_height="25dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/rounded_angles"
                        android:text="Eat"
                        android:textAlignment="center"
                        android:textColor="@color/GP_GC_1"
                        android:fontFamily="@font/fut_med"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/button_bars"
                        android:layout_width="55dp"
                        android:layout_height="25dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/rounded_angles"
                        android:text="Bars"
                        android:textAlignment="center"
                        android:textColor="@color/GP_GC_1"
                        android:fontFamily="@font/fut_med"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/button_movie"
                        android:layout_width="55dp"
                        android:layout_height="25dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/rounded_angles"
                        android:text="Movie"
                        android:textAlignment="center"
                        android:textColor="@color/GP_GC_1"
                        android:fontFamily="@font/fut_med"
                        android:textSize="10sp" />

                </LinearLayout>

                </ScrollView>

                <RelativeLayout
                    android:id="@+id/relative_layout_basket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ScrollView
                        android:id="@+id/scrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linear_layout_basket"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/relative_layout_11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/rounded_angles"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageView_place_11"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/rounded_angles"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <TextView
                                    android:id="@+id/textView_top_11"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="60dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/fut_med"
                                    android:text="Tagam ashana jelisi"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/textView_bottom_11"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignStart="@+id/textView_top_11"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="27.5dp"
                                    android:fontFamily="@font/fut_med"
                                    android:text=" 24/7   |   Ave: 1000KZT"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/imageView_info_11"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    app:srcCompat="@drawable/info_icon" />

                                <ImageButton
                                    android:id="@+id/imageButton3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="29.5dp"
                                    android:layout_marginEnd="38dp"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/like_icon" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relative_layout_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/rounded_angles"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageView_place_12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/rounded_angles"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <TextView
                                    android:id="@+id/textView_top_12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="60dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/fut_med"
                                    android:text="Madeni ashana by Rumi"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/textView_bottom_12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignStart="@+id/textView_top_12"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="27.5dp"
                                    android:fontFamily="@font/fut_med"
                                    android:text=" 24/7   |   Ave: 2000KZT"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/imageView_info_12"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    app:srcCompat="@drawable/info_icon" />

                                <ImageButton
                                    android:id="@+id/imageButton4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="29.5dp"
                                    android:layout_marginEnd="38dp"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/like_icon" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relative_layout_13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/rounded_angles"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageView_place_13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/rounded_angles"
                                    app:srcCompat="@android:drawable/btn_star" />

                                <TextView
                                    android:id="@+id/textView_top_13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="60dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/fut_med"
                                    android:text="Rumi"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/textView_bottom_13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignStart="@+id/textView_top_13"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="27.5dp"
                                    android:fontFamily="@font/fut_med"
                                    android:text=" 24/7   |   Ave: 3000KZT"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/imageView_info_13"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    app:srcCompat="@drawable/info_icon" />

                                <ImageButton
                                    android:id="@+id/imageButton5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="29.5dp"
                                    android:layout_marginEnd="38dp"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/like_icon" />
                            </RelativeLayout>

                        </LinearLayout>

                    </ScrollView>


                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
        <!--End Body-->




    </LinearLayout>
</RelativeLayout>