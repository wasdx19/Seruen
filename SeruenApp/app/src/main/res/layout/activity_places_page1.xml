<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Fragments.PlacesPageFragments.PlacesPageFragment1">

    <LinearLayout
        android:id="@+id/linear_layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Header-->
        <RelativeLayout
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/gradient2">

            <TextView
                android:id="@+id/headerTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/fut_med"
                android:text="Places"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24.5dp"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/basket_icon" />

            <EditText
                android:id="@+id/editText_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/search_rounded_angles"
                android:fontFamily="@font/fut_med"
                android:text="Search"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />


        </RelativeLayout>

        <!--End Header-->

        <!--Body-->
        <RelativeLayout
            android:id="@+id/relative_layout_places"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ScrollView
                    android:id="@+id/scrollViewPlaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_news"
                            android:layout_width="55dp"
                            android:layout_height="25dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/rounded_angles"
                            android:fontFamily="@font/fut_med"
                            android:text="News"
                            android:textAlignment="center"
                            android:textColor="@color/GP_GC_1"
                            android:textSize="10sp" />

                        <Button
                            android:id="@+id/button_events"
                            android:layout_width="55dp"
                            android:layout_height="25dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/rounded_angles"
                            android:fontFamily="@font/fut_med"
                            android:text="Events"
                            android:textAlignment="center"
                            android:textColor="@color/GP_GC_1"
                            android:textSize="10sp" />

                        <Button
                            android:id="@+id/button_clubs"
                            android:layout_width="55dp"
                            android:layout_height="25dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/rounded_angles"
                            android:fontFamily="@font/fut_med"
                            android:text="Clubs"
                            android:textAlignment="center"
                            android:textColor="@color/GP_GC_1"
                            android:textSize="10sp" />

                        <Button
                            android:id="@+id/button_zoo"
                            android:layout_width="55dp"
                            android:layout_height="25dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/rounded_angles"
                            android:fontFamily="@font/fut_med"
                            android:text="Zoo"
                            android:textAlignment="center"
                            android:textColor="@color/GP_GC_1"
                            android:textSize="10sp" />

                        <Button
                            android:id="@+id/button_eat"
                            android:layout_width="55dp"
                            android:layout_height="25dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/rounded_angles"
                            android:fontFamily="@font/fut_med"
                            android:text="Eat"
                            android:textAlignment="center"
                            android:textColor="@color/GP_GC_1"
                            android:textSize="10sp" />

                        <Button
                            android:id="@+id/button_bars"
                            android:layout_width="55dp"
                            android:layout_height="25dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/rounded_angles"
                            android:fontFamily="@font/fut_med"
                            android:text="Bars"
                            android:textAlignment="center"
                            android:textColor="@color/GP_GC_1"
                            android:textSize="10sp" />

                        <Button
                            android:id="@+id/button_movie"
                            android:layout_width="55dp"
                            android:layout_height="25dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/rounded_angles"
                            android:fontFamily="@font/fut_med"
                            android:text="Movie"
                            android:textAlignment="center"
                            android:textColor="@color/GP_GC_1"
                            android:textSize="10sp" />

                    </LinearLayout>

                </ScrollView>

                <RelativeLayout
                    android:id="@+id/relative_layout_basket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ScrollView
                        android:id="@+id/scrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linear_layout_basket"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ListView
                                android:id="@+id/listView_places"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </ScrollView>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
        <!--End Body-->


    </LinearLayout>
</RelativeLayout>